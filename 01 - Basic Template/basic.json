{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
     
  },
  "variables": {
     
  },
  "resources": [
      {
          "name": "basicvm01",
          "type": "Microsoft.Compute/virtualMachines",
          "apiVersion": "2016-04-30-preview",
          "location": "[resourceGroup().location]",
          "dependsOn": [
              "basicvm01-nic"
          ],
          "properties": {
              "osProfile": {
                  "computerName": "basicvm01",
                  "adminUsername": "gbeech",
                  "adminPassword": "YouShouldBeSmarter1!"
              },
              "hardwareProfile": {
                  "vmSize": "Basic_A0"
              },
              "storageProfile": {
                  "imageReference": {
                      "publisher": "Canonical",
                      "offer": "UbuntuServer",
                      "sku": "17.04",
                      "version": "latest"
                  },
                  "osDisk": {
                      "createOption": "FromImage",
                      "managedDisk": {
                          "storageAccountType": "Standard_LRS"
                      }
                  },
                  "dataDisks": []
              },
              "networkProfile": {
                  "networkInterfaces": [
                      {
                          "id": "[resourceId('Microsoft.Network/networkInterfaces', 'basicvm01-nic')]"
                      }
                  ]
              }
          }
      },
      {
          "name": "basicNetwork",
          "type": "Microsoft.Network/virtualNetworks",
          "apiVersion": "2016-12-01",
          "location": "[resourceGroup().location]",
          "properties": {
              "addressSpace": {
                  "addressPrefixes": [
                      "10.0.0.0/24"
                  ]
              },
              "subnets": [
                  {
                      "name": "basicSubnet",
                      "properties": {
                          "addressPrefix": "10.0.0.0/24"
                      }
                  }
              ]
          }
      },
      {
          "name": "basicvm01-nic",
          "type": "Microsoft.Network/networkInterfaces",
          "apiVersion": "2016-09-01",
          "location": "[resourceGroup().location]",
          "dependsOn": [
              "[resourceId('Microsoft.Network/virtualNetworks/', 'basicNetwork')]",
              "[resourceId('Microsoft.Network/publicIpAddresses/', 'basicPublicIp')]"
          ],
          "properties": {
              "ipConfigurations": [
                  {
                      "name": "ipconfig1",
                      "properties": {
                          "subnet": {
                              "id": "[concat(resourceId('Microsoft.Network/virtualNetworks','basicNetwork'),'/subnets/basicSubnet')]"
                          },
                          "privateIPAllocationMethod": "Dynamic",
                          "publicIpAddress": {
                              "id": "[resourceId('Microsoft.Network/publicIpAddresses', 'basicPublicIp')]"
                          }
                      }
                  }
              ]
              
          }
      },
      {
          "name": "BasicPublicIp",
          "type": "Microsoft.Network/publicIpAddresses",
          "apiVersion": "2017-06-01",
          "location": "[resourceGroup().location]",
          "properties": {
              "publicIpAllocationMethod": "Dynamic",
              "publicIpAddressVersion": "IPv4"
          }
         
      }
      
  ],
  "outputs": {
  }
}